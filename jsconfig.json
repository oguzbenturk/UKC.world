{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "**/node_modules",
    "**/node_modules/**",
    "dist",
    "dist-ssr",
    "backend",
    "backend/**",
    "logs",
    "uploads",
    "tools/**/downloads",
    "playwright-report",
    "test-results"
  ]
}
